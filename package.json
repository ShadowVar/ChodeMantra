{
  "name": "chodemantra",
  "version": "2.1.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "ShadowVar",
  "license": "ISC",
  "description": "A tool for typing and managing code snippets",
  "dependencies": {
    "electron-store": "^10.0.1"
  },
  "devDependencies": {
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9"
  },
"build": {
  "appId": "com.Chodemantra.app",
  "productName": "Chodemantra",
  "files": [
    "index.html",
    "index.js",
    "rendered.js",
    "styles.css",
    "type_snippet.py",
    "sun.ico",
    "sun.png",
    "requirements.txt"
  ],
  "extraResources": [
    {
      "from": "./type_snippet.py",
      "to": "type_snippet.py"
    },
    {
      "from": "./sun.ico",
      "to": "sun.ico"
    },
    {
      "from": "./sun.png",
      "to": "sun.png"
    }
  ],
  "directories": {
    "output": "dist"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "icon": "sun.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "sun.ico",
    "uninstallerIcon": "sun.ico",
    "installerHeaderIcon": "sun.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Chodemantra"
  }
}
}
